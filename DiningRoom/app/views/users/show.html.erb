<style>
    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }

    .panel_show_msg {
        background: #EAEAEA;
        border-radius: 50px;
        padding: 10px 40px 10px 40px;
        box-shadow: 10px 10px 5px #ccc;
        margin-top: 20px;
        margin-bottom: 100px;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">管理</li>
    <li>
      <a href="/users">员工管理</a>
    </li>
    <li class="active">员工信息</li>
  </ol>
</div>

<div class="container panel_show_msg">
  <div class="panel-heading" style="display: flex; border-bottom: 1px dashed steelblue;">
    <i class="glyphicon glyphicon-user"
       style="font-size: 3em;margin: 0 30px 0 0;color:steelblue;"></i>

    <h3 style="margin: 5px 0 0 0">员工信息</h3>
  </div>


  <div class="panel-body">
    <div class="panel panel-primary">
      <div class="panel-heading" style="display: flex;height: 40px;">
        <i class="glyphicon glyphicon-record" style="font-size: 1em;margin: 1px 10px 0 0;"></i>
        <strong>基本信息</strong>
      </div>

      <div class="panel-body">
        <div class="col-md-8" style="display: flex;">
          <h4 style="white-space: nowrap;">工号:</h4>
          <h4 style="margin-left: 30px;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;" title="<%= @user.nr %>">
            <%= @user.nr %></h4>
        </div>

        <div class="col-md-4" style="display: flex;">
          <h4>姓名:</h4>
          <h4 style="margin-left: 30px;"><%= @user.name %></h4>
        </div>
      </div>
      <hr style="border-top:1px dashed #ccc;margin: 0;">
      <div class="panel-body">
        <div class="col-md-4" style="display: flex;">
          <h4>角色:</h4>
          <h4 style="margin-left: 30px;"><%= Role.display(@user.role_id) %></h4>
        </div>

      </div>
    </div>

  </div>
</div>
