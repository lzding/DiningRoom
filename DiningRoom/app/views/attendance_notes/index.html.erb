<style>
    .col-sm-12 {
        height: 40px;
        line-height: 40px;
    }

    input[type='number'],.datepicker {
        width: 150px;
    }

    .up_search {
        text-align: right;
        cursor: pointer;
        margin-bottom: 10px;
        margin-top: -40px;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }
    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">考勤管理</li>
    <li class="active">
      <a href="/attendance_notes">考勤记录</a>
    </li>
  </ol>
</div>


<div class="all-search">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">

    <div class="col-sm-12">
      <div class="col-sm-3">
        工号：
        <%= select_tag('attendance_note[user_id]', options_from_collection_for_select(User.all, :id, :name, @user_id), include_blank: true) %>
      </div>
      <div class="col-sm-3">
        考勤日期：
        <input type="text" name="attendance_note[work_date]" class="datepicker" value="<%= @work_date %>"/>
      </div>


      <div class="col-sm-3">
        <input type="submit" value="查找" class="btn btn-primary" name="search" style="width: 200px;"/>
      </div>

    </div>

  </form>
</div>

<div class="col-sm-12" style="margin-top: 30px;margin-bottom: 20px; width: 98%">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @attendance_notes %>
    </div>
    <%= will_paginate @attendance_notes, :container => false %>
  </div>
</div>


<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>工号</th>
    <th>考勤日期</th>
    <th>状态</th>
    <th>上班时间</th>
    <th>下班时间</th>
    <th>补打卡时间</th>
    <th>补打卡类型</th>
    <th>备注</th>
    <th>加班时长(h)</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @attendance_notes.each_with_index do |attendance_note, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= attendance_note.user %></td>
        <td><%= attendance_note.work_date %></td>
        <td><%= AttendanceNoteState.display(attendance_note.status) %></td>
        <td><%= attendance_note.on_duty_time %></td>
        <td><%= attendance_note.off_duty_time %></td>
        <td><%= attendance_note.fill_clock_time %></td>
        <td><%= FillClockType.display(attendance_note.fill_clock_type) %></td>
        <td><%= attendance_note.remark %></td>
        <td><%= attendance_note.over_times %></td>
        <td>
          <a class="IconA" rel="nofollow" href="<%= attendance_note_path(attendance_note) %>" data-method="delete" data-confirm="Are you sure?" title="删除">
            <i class="glyphicon glyphicon-trash" style="color:darkred;"></i>
          </a>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @attendance_notes, :container => false %>
</div>

<script>
    $(function () {
        $(".datepicker").datepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();
    $('.up_search').click(function () {
        var this_arrow = $(this);
        $('.all-search').slideToggle(300, function () {
            if (this_arrow.children('i').hasClass('glyphicon-chevron-up')) {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-down');
                this_arrow.children('i').attr('title', '展开搜索条件');
            } else {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-up');
                this_arrow.children('i').attr('title', '收起搜索条件');
            }
        });
    })
</script>

